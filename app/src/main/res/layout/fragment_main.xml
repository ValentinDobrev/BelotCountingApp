<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainFragment">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ace" />
        <TextView
            android:id="@+id/Text_View1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Belot"
            android:layout_above="@id/Text_View2"
            android:textColor="#FFFFFF" />
        <TextView
            android:id="@+id/Text_View2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Counting"
            android:layout_above="@id/Text_View3"
            android:textColor="#FFFFFF" />
        <TextView
            android:id="@+id/Text_View3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Application!"
            android:layout_above="@id/Text_View4"
            android:textColor="#FFFFFF" />
        <TextView
            android:id="@+id/Text_View4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Demo version 1.0"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:textColor="#FFFFFF" />
        <Button
            android:id="@+id/NewGame_Button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="NEW GAME"
            android:layout_centerInParent="true" />

    </RelativeLayout>

</FrameLayout>