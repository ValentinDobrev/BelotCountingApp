<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThirdWindowFragment">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ThirdWindowActivity">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/back" />
        <TextView
            android:id="@+id/Text_View1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="choose Team 1:"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:textSize="50dp"
            android:textColor="#FFFFFF" />
        <TextView
            android:id="@+id/Text_View2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="first player:"
            android:layout_below="@id/Text_View1"
            android:layout_marginStart="50dp"
            android:textSize="25dp"
            android:textColor="#FFFFFF"/>

        <Spinner
            android:id="@+id/Spinner_Team1_Player1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/Text_View1"
            android:layout_marginStart="250dp"
            android:textSize="25dp"
            android:visibility="visible"
            android:background="#bdf9bb" />

        <TextView
            android:id="@+id/Text_View3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="second player:"
            android:layout_below="@+id/Text_View2"
            android:paddingBottom="100dp"
            android:layout_marginStart="50dp"
            android:textSize="25dp"
            android:textColor="#FFFFFF" />

        <Spinner
            android:id="@+id/Spinner_Team1_Player2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/Text_View2"
            android:layout_marginStart="250dp"
            android:textSize="25dp"
            android:visibility="visible"
            android:background="#bdf9bb" />

        <TextView
            android:id="@+id/Text_View4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="choose Team 2:"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/Text_View3"
            android:textSize="50dp"
            android:textColor="#FFFFFF" />

        <Spinner
            android:id="@+id/Spinner_Team2_Player1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/Text_View4"
            android:layout_marginStart="250dp"
            android:textSize="25dp"
            android:visibility="visible"
            android:background="#bdf9bb" />

        <TextView
            android:id="@+id/Text_View5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="first player:"
            android:layout_marginStart="50dp"
            android:layout_below="@id/Text_View4"
            android:textSize="25dp"
            android:textColor="#FFFFFF" />

        <Spinner
            android:id="@+id/Spinner_Team2_Player2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/Text_View5"
            android:layout_marginStart="250dp"
            android:textSize="25dp"
            android:visibility="visible"
            android:background="#bdf9bb" />

        <TextView
            android:id="@+id/Text_View6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="second player:"
            android:layout_marginStart="50dp"
            android:layout_below="@id/Text_View5"
            android:textSize="25dp"
            android:paddingBottom="100dp"
            android:textColor="#FFFFFF" />
        <Button
            android:id="@+id/StartGame_Button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="START GAME"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/Text_View6"/>

    </RelativeLayout>

</FrameLayout>